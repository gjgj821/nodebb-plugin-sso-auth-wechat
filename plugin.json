{
	"id": "nodebb-plugin-sso-auth-wechat",
	"name": "NodeBB Wechat SSO",
	"description": "NodeBB Plugin that allows users to login/register via their Wechat account.",
	"url": "https://github.com/exuan/nodebb-plugin-sso-auth-wechat",
	"library": "./library.js",
	"hooks": [
		{ "hook": "filter:auth.init", "method": "getStrategy" },
		{ "hook": "filter:auth.list", "method": "getAssociation" },
		{ "hook": "filter:admin.header.build", "method": "addMenu" },
		{ "hook": "static:app.load", "method": "init" },
		{ "hook": "static:user.delete", "method": "deleteUser" }
	],
	"templates": "./templates",
	"acpScripts": [
		"static/lib/admin.js"
	]
}
